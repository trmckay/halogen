{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "make -j$(nproc) build/halogen.bin",
            "problemMatcher": [],
            "label": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "command": "make -j$(nproc) build/halogen-test.bin",
            "problemMatcher": [],
            "label": "build tests"
        },
        {
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [],
            "label": "make clean"
        },
        {
            "label": "GDB server (run)",
            "type": "shell",
            "command": "${workspaceFolder}/bin/run.sh",
            "args": ["-g"],
            "dependsOn": "build",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ""
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": " ",
                    "endsPattern": "."
                }
            }
        },
        {
            "label": "GDB server (test)",
            "type": "shell",
            "command": "${workspaceFolder}/bin/run.sh",
            "args": ["-gt"],
            "dependsOn": "build tests",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ""
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": " ",
                    "endsPattern": "."
                }
            }
        }
    ]
}
