{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "make clean && make",
            "problemMatcher": [],
            "label": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [],
            "label": "make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "command": "${workspaceFolder}/bin/run.sh",
            "args": [
                "-g",
                "build/halogen.bin"
            ],
            "dependsOn": "make",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ""
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": " ",
                    "endsPattern": "."
                }
            },
            "label": "GDB server"
        },
    ]
}
