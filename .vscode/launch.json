    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach debugger (run)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/halogen.elf",
            "args": [],
            "stopAtEntry": true,
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "riscv64-unknown-elf-gdb",
            "preLaunchTask": "GDB server (run)",
            "miDebuggerServerAddress": "localhost:1234",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                },
                {
                    "text": "set riscv use-compressed-breakpoints yes",
                    "ignoreFailures": false,
                },
                {
                    "text": "symbol-file ${workspaceFolder}/build/halogen.elf",
                    "ignoreFailures": false,
                }
            ]
        },
